--- /dev/null
+++ b/board/Marvell/mvebu_armada-8k/mikrotik-rb5009-netboot.env
@@ -0,0 +1,72 @@
+openwrt_initramfs=openwrt-mvebu-cortexa72-mikrotik_rb5009-initramfs-uImage.itb
+boot_devices=usb net ubi
+recovery_boot_devices=usb net
+
+button_cmd_0_name=reset
+button_cmd_0=run recovery_bootcmd
+
+recovery_bootcmd=
+	led green:sfp on;
+	led blue:hdr1 on;
+	led blue:hdr2 on;
+
+	for b in ${recovery_boot_devices}; do
+		if test ${b} = usb; then
+			run usbboot;
+		fi;
+		if test ${b} = net; then
+			run netboot;
+		fi;
+	done;
+
+bootcmd=
+	for b in ${boot_devices}; do
+		if test ${b} = ubi; then
+			run ubiboot;
+		fi;
+		if test ${b} = usb; then
+			run usbboot;
+		fi;
+		if test ${b} = net; then
+			run netboot;
+		fi;
+	done;
+
+nor_of_node=/ap806/config-space@f0000000/spi@510600/flash@0
+
+fdt_move_u_boot=
+	fdt resize 0x1000;
+	fdt mknode ${nor_of_node}/partitions partition@100000;
+	fdt set ${nor_of_node}/partitions/partition@100000 reg <0x100000 0x20000>;
+	fdt set ${nor_of_node}/partitions/partition@100000 compatible "u-boot,env";
+	fdt set ${nor_of_node}/partitions/partition@100000 label "u-boot-env-early";
+	fdt rm ${nor_of_node}/partitions/partition@fe0000;
+	fdt rm ${nor_of_node}/partitions/partition@3e0000;
+
+bootm_moved_u_boot=
+	bootm start;
+	bootm loados;
+	bootm ramdisk;
+	bootm fdt;
+	run fdt_move_u_boot;
+	bootm cmdline;
+	bootm go;
+
+ubiboot=
+	echo Booting from NAND (UBI);
+	ubi part ubi;
+	setenv loadimagecmd ${ubiloadimage};
+	ubi read ${loadaddr} kernel;
+	run bootm_moved_u_boot;
+
+usbboot=
+	echo Booting from USB Storage;
+	usb start;
+	load usb 0:1 ${loadaddr} ${openwrt_initramfs};
+	run bootm_moved_u_boot;
+
+netboot=
+	echo Booting from Network;
+	dhcp;
+	tftpboot ${loadaddr} ${openwrt_initramfs};
+	run bootm_moved_u_boot;
